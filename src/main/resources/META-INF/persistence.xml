<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.0"
             xsi:noNamespaceSchemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="Eclipselink_JPA" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>internshipApplication.model.Applicant</class>
        <class>internshipApplication.model.Employer</class>
        <class>internshipApplication.model.JobListing</class>
        <properties>
            <!--    <property name="hibernate.hbm2ddl.auto" value="update"/> -->
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/internshipApplicationdb"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.ddl-generation" value="none"/>
        </properties>

    </persistence-unit>
</persistence>